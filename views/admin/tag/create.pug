extends ../base

block content
  main
    .c-breadcrumb
      .l-container
        .c-breadcrumb__content
          ul.c-breadcrumb__list
            li.c-breadcrumb__item
              a.c-breadcrumb__link.c-breadcrumb__link--home(href='/admin/')
                i.c-breadcrumb__icon
                  svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                    path(stroke-linecap='round' stroke-linejoin='round' d='M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25')
                span Quảng trị
            li(class="c-breadcrumb__item")
              span(class="c-breadcrumb__link") Tags
    .p-information
      .l-container
        .p-information__inner
          p.p-information__text Xin chào! Lê Văn Quý
    .p-anchor
      .l-container
        ul.p-anchor__list
          li.p-anchor__item
            a.p-anchor__link(href='/admin/post/')
              i.p-anchor__icon
                svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                  path(stroke-linecap='round' stroke-linejoin='round' d='M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 01.865-.501 48.172 48.172 0 003.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z')
              span.p-anchor__text Posts
          li.p-anchor__item
            a.p-anchor__link(href='/admin/tag/')
              i.p-anchor__icon
                svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                  path(stroke-linecap='round' stroke-linejoin='round' d='M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z')
                  path(stroke-linecap='round' stroke-linejoin='round' d='M6 6h.008v.008H6V6z')
              span.p-anchor__text Tags
    .p-category
      .l-container
        div(class="p-category__inner")
          #dich-vu-ke-toan(class="p-category__box")
            div(class="p-category__top")
              h2(class="p-category__heading")
                i(class="p-category__icon")
                  svg.w-6.h-6(xmlns="http://www.w3.org/2000/svg", fill="none", viewBox="0 0 24 24", stroke-width="1.5", stroke="currentColor")
                    path(stroke-linecap="round", stroke-linejoin="round", d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 01.865-.501 48.172 48.172 0 003.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z")
                span(class="p-category__sub") Tạo Tag
            .p-form
              form(class="p-form__form")
                div(class="p-form__form-column")
                  div(class="p-form__form-row")
                    div(class="p-form__form-group")
                      label(class="p-form__form-label") Tên Tag:
                      input(type="text", class="p-form__form-input", placeholder="nhập tag")
                      div(class="p-form__form-error") Vui lòng nhập tag.
                div(class="p-form__form-column")
                  div(class="p-form__form-row")
                    div(class="p-form__form-group")
                      label(class="p-form__form-label") Mô tả:
                      textarea(class="p-form__form-textarea", rows="4")
                      div(class="p-form__form-error") Vui lòng nhập mô tả.
                div(class="p-form__form-column")
                  div(class="p-form__form-row p-form__form-row--btn")
                    button(type="submit", class="p-form__form-btn") Thêm
                    a(href="", class="p-form__form-btn p-form__form-btn--delete") Hủy
    
    
                        
