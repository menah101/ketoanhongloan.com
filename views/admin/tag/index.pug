extends ../base

block content
  main
    +Breadcrumb('Tags')
    +Information(user)
    +Anchor(user)
    .p-category
      .l-container
        div(class="p-category__inner")
          div(class="p-category__box")
            +CategoryTop('/admin/tag/create', 'Danh sách Tag')
            .c-datatable
              table#dataTable
                thead
                  tr
                    th(class="c-datatable__title", style="width: 30px;") STT
                    th(class="c-datatable__title") Tag
                    th(class="c-datatable__title", style="width: 15%;") Hành động
                tbody
                  tr
                    td
                      p(class="c-datatable__text") 1
                    td
                      p(class="c-datatable__text") Row 1 Data 1
                    td
                      +ButtonAction('/admin/tag/edit')